# server/.env

# Server Port
PORT=5000

# MySQL Database Configuration (from XAMPP)
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=    # If you have a MySQL password, enter it here. Otherwise, leave it empty.
DB_DATABASE=user_auth_db

# MongoDB Database Configuration
MONGO_URI=mongodb://localhost:27017/user_profiles_db
# If using MongoDB Atlas, use your connection string like:
# MONGO_URI=mongodb+srv://<username>:<password>@<cluster-name>.mongodb.net/<database-name>?retryWrites=true&w=majority

# JWT Secret (IMPORTANT: CHANGE THIS TO A LONG, RANDOM, AND SECURE STRING IN PRODUCTION)
JWT_SECRET=aVeryStrongAndComplexSecretKeyForJWTThatYouMustNeverShare

# Frontend URL (for CORS - default for Create React App)
CLIENT_URL=http://localhost:3000